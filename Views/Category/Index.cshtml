@model IEnumerable<Category>

@{
    ViewBag.Title = "Category List";
}

<h2>Category List</h2>
<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Add New Category</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th> </th>
            <th>Category Name</th>
            <th>Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = category.CategoryId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new { id = category.CategoryId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
