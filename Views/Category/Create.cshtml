@model MachineTestProject.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<h2>Add Category</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="CategoryName" class="control-label">Category Name</label>
        <input type="text" class="form-control" id="CategoryName" name="CategoryName" value="@Model.CategoryName" required />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
